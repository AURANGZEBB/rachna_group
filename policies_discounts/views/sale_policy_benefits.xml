<odoo>
<!--	__________________________________________________________________________________________________________- -->
		<record id="ta_sale_policy_benefit_tree" model="ir.ui.view">
	    <field name="name">ta.sale.policy.benefit.tree</field>
	    <field name="model">sale.policy.benefit</field>
	    <field name="arch" type="xml">
			<tree>
				<field name="name" required="1"/>
				<field name="type" required="1"/>
				<field name="quantity" required="1"/>
				<field name="value" required="1"/>
				<field name="total_value"/>
			</tree>
        </field>
    </record>

	<record id="ta_sale_policy_benefit_form" model="ir.ui.view">
	    <field name="name">ta.sale.policy.benefit.form</field>
	    <field name="model">sale.policy.benefit</field>
	    <field name="arch" type="xml">
			<form>
				<group>
					<group>
						<field name="name" required="1"/>
						<field name="type" required="1"/>
						<field name="quantity" required="1"/>
						<field name="value" required="1"/>
						<field name="total_value" readonly="1" force_save="1"/>
						<field name="company_id" readonly="1"/>
					</group>
				</group>
			</form>
        </field>
    </record>

	<record id="action_ta_sale_policy_benefit" model="ir.actions.act_window">
	   <field name="name">Policy Benefit</field>
	   <field name="res_model">sale.policy.benefit</field>
	   <field name="view_mode">tree,form</field>
	   <field name="context">{}</field>
		<field name="domain">[]</field>
<!--	   <field name="domain">[('transaction_with', '=', 'vendor')]</field>-->
<!--	   <field name="view_id" ref="customer_details_tree"/>-->
	   <field name="help" type="html">
		   <p class="o_view_nocontent_smiling_face">
			   Define Your Policy Benefit Here!
		   </p>
	   </field>
	</record>

	<menuitem id="menu_ta_sale_policy_benefit"
	 name="Policy Benefit"
	 parent="sale.menu_sale_config"
	 action="action_ta_sale_policy_benefit"
	 sequence="101"/>
</odoo>