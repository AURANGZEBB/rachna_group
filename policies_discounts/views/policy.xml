<odoo>
	<record id="ta_tree_policy_def" model="ir.ui.view">
	    <field name="name">ta.tree.policy.def</field>
	    <field name="model">policy.def</field>
	    <field name="arch" type="xml">
			<tree>
				<field name="name" required="1"/>
				<field name="include_psi"/>
				<field name="calc_type" required="1"/>
			</tree>
        </field>
    </record>

	<record id="ta_form_policy_def" model="ir.ui.view">
	    <field name="name">ta.form.policy.def</field>
	    <field name="model">policy.def</field>
	    <field name="arch" type="xml">
			<form>
				<group>
					<group>
						<field name="name" required="1"/>
						<field name="include_psi"/>
						<field name="calc_type" required="1"/>
					</group>
				</group>
			</form>
        </field>
    </record>

	<record id="action_ta_policy_def" model="ir.actions.act_window">
	   <field name="name">Policy Def</field>
	   <field name="res_model">policy.def</field>
	   <field name="view_mode">tree,form</field>
	   <field name="context">{}</field>
		<field name="domain">[]</field>
<!--	   <field name="domain">[('transaction_with', '=', 'vendor')]</field>-->
<!--	   <field name="view_id" ref="customer_details_tree"/>-->
	   <field name="help" type="html">
		   <p class="o_view_nocontent_smiling_face">
			   Define your Policy Here!
		   </p>
	   </field>
	</record>

	<menuitem id="menu_ta_policy_def"
	 name="Policy Def"
	 parent="sale.menu_sale_config"
	 action="action_ta_policy_def"
	 sequence="100"/>

<!--	__________________________________________________________________________________________________________- -->
		<record id="ta_tree_policy_benefits" model="ir.ui.view">
	    <field name="name">ta.tree.policy.def</field>
	    <field name="model">policy.benefits</field>
	    <field name="arch" type="xml">
			<tree>
				<field name="name" required="1"/>
				<field name="currency_id" required="1"/>
				<field name="value" required="1"/>
			</tree>
        </field>
    </record>

	<record id="ta_form_policy_benefits" model="ir.ui.view">
	    <field name="name">ta.form.policy.def</field>
	    <field name="model">policy.benefits</field>
	    <field name="arch" type="xml">
			<form>
				<group>
					<group>
						<field name="name" required="1"/>
						<field name="currency_id" required="1"/>
						<field name="value" required="1"/>
					</group>
				</group>
			</form>
        </field>
    </record>

	<record id="action_ta_policy_benefits" model="ir.actions.act_window">
	   <field name="name">Policy benefits</field>
	   <field name="res_model">policy.benefits</field>
	   <field name="view_mode">tree,form</field>
	   <field name="context">{}</field>
		<field name="domain">[]</field>
<!--	   <field name="domain">[('transaction_with', '=', 'vendor')]</field>-->
<!--	   <field name="view_id" ref="customer_details_tree"/>-->
	   <field name="help" type="html">
		   <p class="o_view_nocontent_smiling_face">
			   Define Your Policy Benefits Here!
		   </p>
	   </field>
	</record>

	<menuitem id="menu_ta_policy_benefits"
	 name="Policy Benefits"
	 parent="sale.menu_sale_config"
	 action="action_ta_policy_benefits"
	 sequence="101"/>
</odoo>