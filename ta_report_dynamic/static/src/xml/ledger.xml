<!--?xml version="1.0" encoding="UTF-8"?-->
<templates xml:space="preserve">
  <t t-name="LedgerCust" class="hello-world">
    <div>
           <div>
               <h3>
                   Party Ledger
               </h3>
           </div>
           <div>
               <div class="filter_view_tb"></div>
           </div>
           <br></br>
           <div>
               <div class="table_view"></div>
           </div>
       </div>
    </t>
    <t t-name="filter_view">
       <div class="row">
           <div class="col-4">
               <label for="partner_id">Customer:</label>
                <select id="partner_id" class="form-control">
                    <option value="0">None</option>
                    <t t-foreach="partners" t-as="partner">
                        <option t-att-value="partner.id">
                            <t t-esc="partner.name"/>
                        </option>
                    </t>
                </select>
                <button class="apply_filter">Apply Filter</button>
                <button class="print_view">Print</button>
           </div>
           <div class="col-4">
               <div>
                   <label for="date_start">Date Start:</label>
                   <input type="date" id="date_start" name="date_start"/>
               </div>
               <div>
                   <label for="date_end">Date End :</label>
                   <input type="date" id="date_end" name="date_end"/>
               </div>
           </div>
       </div>
    </t>
    
    <t t-name="LedgerTable">
       <div>
           <div class="table_main_view">
               <div class="row">
                   <div class="col-3"></div>
                   <div class="col-6" style="text-align: center;">
                       <h3><t t-esc="company_name"/></h3>
                   </div>
                   <div class="col-3"></div>
               </div>
               <div class="row">
                   <div class="col-3"></div>
                   <div class="col-6" style="text-align: center;">
                       <h4>Party Ledger:</h4>
                   </div>
                   <div class="col-3"></div>
               </div>
               <div class="row">
                   <div class="col-3"></div>
                   <div class="col-6" style="text-align: center;">
                       <h4><t t-esc="partner_name"/></h4>
                   </div>
                   <div class="col-3"></div>
               </div>
               <div class="row">
                   <div class="col-3"></div>
                   <div class="col-6" style="text-align: center;">
                       <h4>Address:<t t-esc="partner_address"/></h4>
                       <h4>Phone:<t t-esc="partner_phone"/></h4>
                   </div>
                   <div class="col-3"></div>
               </div>
               <div class="row">
                   <div class="col-1"></div>
                   <div class="col-1"><h5>Sales Team:</h5></div>
                   <div class="col-1"><t t-esc="sales_team"/></div>
               </div>
               <div class="row">
                   <div class="col-1"></div>
                   <div class="col-1"><h5>Sales Person:</h5></div>
                   <div class="col-1"><t t-esc="sales_person"/></div>
                   <div class="col-3"></div>
                   <div class="col-2"></div>
                   <div class="col-1"><h5>Payment Terms:</h5></div>
                   <div class="col-1"><t t-esc="payment_terms"/></div>
               </div>
               <div class="row">
                   <div class="col-1"></div>
                   <div class="col-1"><h5>Date From:</h5></div>
                   <div class="col-1"><t t-esc="date_start"/></div>
                   <div class="col-3"></div>
                   <div class="col-2"></div>
                   <div class="col-1"><h5>Date To:</h5></div>
                   <div class="col-1"><t t-esc="date_end"/></div>
               </div>
               <table cellspacing="0" width="100%">
                   <thead>
                       <tr>
                           <th>Date</th>
                           <th>Voucher#</th>
                           <th>Product</th>
                           <th>Description</th>
                           <th>Qty</th>
                           <th>UOM</th>
                           <th>Rate</th>
                           <th>Amount</th>
                           <th>Policy</th>
                           <th>Disc%</th>
                           <th>Discount</th>
                           <th>Debit</th>
                           <th>Credit</th>
                           <th>Balance</th>
                       </tr>
                   </thead>
                   <tbody>
<!--                       <t t-if="len_lines_data">-->
                       <tr style="border: 1px solid black;">
                           <td></td>
                           <td></td>
                           <td></td>
                           <td><strong>Opening Balance</strong></td>
                           <td></td>
                           <td></td>
                           <td></td>
                           <td></td>
                           <td></td>
                           <td></td>
                           <td></td>
                           <td></td>
                           <td></td>
                           <td><strong><t t-esc="opening_balance"/></strong></td>
                       </tr>

                       <t t-foreach="lines_data" t-as="inv">
                           <tr style="border: 1px solid black;">
                               <td style="width: 8%">
                                   <t t-esc="inv['date']"/>
                               </td>
                               <td style="width: 8%">
                                    <a href="#" t-esc="inv['name']" class="view-source" t-att-data-move-id="inv['id']"/>
                               </td>
                               <td style="width: 8%"><t t-esc="inv['product']"/></td>
                               <td style="width: 25%"><t t-esc="inv['description']"/></td>
                               <td style="width: 3%"><t t-esc="inv['quantity']"/></td>
                               <td style="width: 5%"><t t-esc="inv['uom']"/></td>
                               <td style="width: 5%"><t t-esc="inv['price_unit']"/></td>
                               <td style="width: 5%"><t t-esc="inv['amount']"/></td>
                               <td style="width: 5%"><t t-esc="inv['policy']"/></td>
                               <td style="width: 5%"></td>
                               <td style="width: 5%"></td>
                               <td style="width: 5%"><t t-esc="inv['debit']"/></td>
                               <td style="width: 5%"><t t-esc="inv['credit']"/></td>
                               <td style="width: 5%"><t t-esc="inv['net_balance']"/></td>
                           </tr>
                        </t>
                        <tr style="border: 1px solid black;">
                           <td></td>
                           <td></td>
                           <td></td>
                           <td><strong>Closing Balance</strong></td>
                           <td></td>
                           <td></td>
                           <td></td>
                           <td></td>
                           <td></td>
                           <td></td>
                           <td></td>
                           <td></td>
                           <td></td>
                           <td><strong><t t-esc="closing_balance"/></strong></td>
                        </tr>
<!--                       </t>-->
                   </tbody>
               </table>
           </div>
       </div>
   </t>
</templates>