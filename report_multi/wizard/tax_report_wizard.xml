<?xml version="1.0"?>
<odoo>
    <record id="tax_report_wizard_form" model="ir.ui.view">
        <field name="name">tax.report.wizard.form</field>
        <field name="model">tax.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Tax Report Wizard">
                    <group class="oe_title">
                        <group>
                            <field name="date_from" required="1"/>
                            <field name="date_to" required="1"/>
                        </group>
                    </group>
                <footer>
                    <button name="generate_tax_report" string="Generate Tax Report" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="tax_report_wizard_action" model="ir.actions.act_window">
        <field name="name">Tax Report Wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tax.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="tax_report_wizard_form"/>
        <field name="target">new</field>
    </record>

    <menuitem name="Tax Report"
        id="tax_report_wizard_menu"
        action="tax_report_wizard_action"
        parent="account.menu_finance_reports"
        sequence="100"
        groups="account.group_account_manager"/>
</odoo>
