<odoo>
	<record id="account_payment_inherit_form" model="ir.ui.view">
	    <field name="name">account.payment.inherit.form</field>
	    <field name="model">account.payment</field>
	    <field name="inherit_id" ref="account.view_account_payment_form"/>
	    <field name="arch" type="xml">
			<xpath expr="//field[@name='partner_id']" position="after">
				<field name="lc_number" attrs="{'readonly': [('state', 'not in', ['draft'])]}"/>
			</xpath>
        </field>
    </record>
	<record id="account_payment_inherit_tree" model="ir.ui.view">
	    <field name="name">account.payment.inherit.tree</field>
	    <field name="model">account.payment</field>
	    <field name="inherit_id" ref="account.view_account_payment_tree"/>
	    <field name="arch" type="xml">
			<xpath expr="//field[@name='partner_id']" position="after">
				<field name="lc_number"/>
			</xpath>
        </field>
    </record>
</odoo>