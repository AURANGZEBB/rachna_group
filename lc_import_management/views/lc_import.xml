<odoo>
	<record id="lc_import_tree" model="ir.ui.view">
	    <field name="name">lc.import.tree</field>
	    <field name="model">lc.import</field>
	    <field name="arch" type="xml">
			<tree>
				<field name="description"/>
				<field name="name"/>
				<field name="company_id" invisible="1"/>
			</tree>
        </field>
    </record>

	<record id="lc_import_form" model="ir.ui.view">
	    <field name="name">lc.import.tree</field>
	    <field name="model">lc.import</field>
	    <field name="arch" type="xml">
			<form>
				<group>
					<group>
						<field name="description"/>
						<field name="name"/>
						<field name="company_id" invisible="1"/>
					</group>
				</group>
				<notebook>
					<page string="Purchase Orders">
						<field name="purchase_order_ids" readonly="1"/>
					</page>
					<page string="Bills">
						<field name="account_move_ids" readonly="1"/>
					</page>
					<page string="Payments">
						<field name="account_payment_ids" readonly="1"/>
					</page>
				</notebook>
			</form>
        </field>
    </record>

	<record id="action_lc_import" model="ir.actions.act_window">
	   <field name="name">LC</field>
	   <field name="res_model">lc.import</field>
	   <field name="view_mode">tree,form</field>
	   <field name="context">{}</field>
		<field name="domain">[]</field>
<!--	   <field name="domain">[('transaction_with', '=', 'vendor')]</field>-->
<!--	   <field name="view_id" ref="customer_details_tree"/>-->
	   <field name="help" type="html">
		   <p class="o_view_nocontent_smiling_face">
			   Define Your LC Here!
		   </p>
	   </field>
	</record>

	<menuitem id="menu_lc_import"
	 name="LC"
	 parent="purchase.menu_purchase_config"
	 action="action_lc_import"
	 sequence="150"/>

</odoo>