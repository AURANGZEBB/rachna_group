<odoo>
	<record id="view_attendance_inherit_custom_tree" model="ir.ui.view">
	    <field name="name">view.attendance.inherit.custom.tree</field>
	    <field name="model">hr.attendance</field>
	    <field name="inherit_id" ref="hr_attendance.view_attendance_tree"/>
	    <field name="arch" type="xml">
			<xpath expr="//field[@name='worked_hours']" position="replace">
			</xpath>
			<xpath expr="//field[@name='employee_id']" position="after">
				<field name="shift_id"/>
				<field name="standard_work_hours" widget="float_time"/>
				<field name="shift_check_in" widget="float_time"/>
				<field name="shift_check_out" widget="float_time"/>
			</xpath>
			<xpath expr="//field[@name='check_out']" position="after">
				<field name="worked_hours" widget="float_time"/>
				<field name="over_time" widget="float_time" readonly="1"/>
				<field name="late_in" widget="float_time" readonly="1"/>
				<field name="early_out" widget="float_time" readonly="1"/>
				<field name="day_status" readonly="1" optional="hide"/>
				<field name="status" readonly="1"/>
			</xpath>
        </field>
    </record>
<!--	mass action -->
	 <record id="action_mass_attendance_tree_view" model="ir.actions.server">
        <field name="name">Mass Run Compute Attendance</field>
        <field name="model_id" ref="payroll_custom.model_hr_attendance"/>
        <field name="binding_model_id" ref="payroll_custom.model_hr_attendance"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">action = records.compute_attendance()</field>
    </record>
</odoo>
