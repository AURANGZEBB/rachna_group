<odoo>
	<record id="account_move_line_inherit_tree" model="ir.ui.view">
	    <field name="name">account.move.line.inherit.tree</field>
	    <field name="model">account.move.line</field>
	    <field name="inherit_id" ref="account.view_move_line_tree"/>
	    <field name="arch" type="xml">
			<xpath expr="//field[@name='partner_id']" position="after">
				<field name="product_category"/>
				<field name="account_type"/>
			</xpath>
        </field>
    </record>

	<record id="account_move_line_inherit_form" model="ir.ui.view">
	    <field name="name">account.move.line.inherit.form</field>
	    <field name="model">account.move.line</field>
	    <field name="inherit_id" ref="account.view_move_line_form"/>
	    <field name="arch" type="xml">
			<xpath expr="//field[@name='quantity']" position="after">
				<field name="product_category" readonly="1"/>
				<field name="account_type" readonly="1"/>
			</xpath>
        </field>
    </record>

	<record id="account_move_line_inherit_search" model="ir.ui.view">
	    <field name="name">account.move.line.inherit.search</field>
	    <field name="model">account.move.line</field>
	    <field name="inherit_id" ref="account.view_account_move_line_filter"/>
	    <field name="arch" type="xml">
			<xpath expr="//group/filter[@name='journal']" position="after">
				<filter string="Product Category" name="Product Category" domain="[]" context="{'group_by': 'product_category'}"/>
			</xpath>
        </field>
    </record>
</odoo>