<odoo>
<!--	__________________________________________________________________________________________________________- -->
    <record id="extend_account_move_form_for_policy" model="ir.ui.view">
	    <field name="name">extend.account.move.form.for.policy</field>
	    <field name="model">account.move</field>
	    <field name="inherit_id" ref="account.view_move_form"/>
	    <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="get_balance" string="Get Balance" type="object" class="oe_highlight"/>
            </xpath>
            <xpath expr="//field[@name='payment_reference']" position="after">
                <field name="previous_balance" readonly="1" force_save="1"/>
                <field name="current_balance" readonly="1" force_save="1"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="policy_id" readonly="1"/>
            </xpath>
            <xpath expr="//tree/field[@name='quantity']" position="before">
                <field name="policy_id" force_save="1"/>
                <field name="policy_line_ids" widget="many2many_tags" readonly="1"/>
                <field name="policy_line_balance" readonly="1"/>
                <field name="tax_line_amount" optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>