<odoo>
<!--	__________________________________________________________________________________________________________- -->
    <record id="extend_account_move_form_for_policy" model="ir.ui.view">
	    <field name="name">extend.account.move.form.for.policy</field>
	    <field name="model">account.move</field>
	    <field name="inherit_id" ref="account.view_move_form"/>
	    <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='quantity']" position="before">
                <field name="policy_id"/>
                <field name="policy_line_ids"/>
                <field name="line_advance_balance" readonly="1"/>
                <field name="policy_discount" readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>