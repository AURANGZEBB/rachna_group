<?xml version="1.0"?>
<odoo>
    <record id="extend_res_partner_form" model="ir.ui.view">
        <field name="name">extend.res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="replace">
                <field name="vat" string="STRN"/>
            </xpath>
            <xpath expr="//field[@name='vat']" position="after">
                <field name="preferred_courier"/>
                <field name="booking_type"/>
                <field name="ntn"/>
                <field name="cnic"/>
                <field name="contact_person"/>
                <field name="default_discount_percentage"/>
                <field name="is_khi" readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>
