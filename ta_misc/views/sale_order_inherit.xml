<?xml version="1.0"?>
<odoo>
    <record id="sale_order_inherit_form" model="ir.ui.view">
        <field name="name">sale.order.inherit.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="is_khi" invisible="1"/>
                <field name="x_user_id" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="domain">[('is_khi', '=', is_khi),('is_company', '=', False)]</attribute>
            </xpath>
            <xpath expr="//tree/field[@name='route_id']" position="attributes">
                <attribute name="required">1</attribute>
                <attribute name="domain">[('sale_selectable','=',True),('id','in',routes_allowed)]</attribute>
            </xpath>
            <xpath expr="//tree/field[@name='route_id']" position="attributes">
                <attribute name="required">1</attribute>
                <attribute name="domain">[('sale_selectable','=',True),('id','in',routes_allowed)]</attribute>
            </xpath>
            <xpath expr="//tree/field[@name='route_id']" position="after">
                <field name="routes_allowed" invisible="1"/>
            </xpath>
            <xpath expr="//tree/field[@name='product_id']" position="after">
                <field name="type_id" invisible="1"/>
            </xpath>
            <xpath expr="//tree/field[@name='product_id']" position="attributes">
                <attribute name="domain">[('sale_ok', '=', True),('x_type_filter', '!=', False), ('x_type_filter', 'in', [type_id]), '|', ('company_id', '=', False), ('company_id', '=', parent.company_id)]</attribute>
            </xpath>
            <xpath expr="//field[@name='type_id']" position="after">
                <field name="order_types_allowed" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='type_id']" position="attributes">
                <attribute name="domain">[('id', 'in', order_types_allowed)]</attribute>
            </xpath>
        </field>
    </record>
</odoo>