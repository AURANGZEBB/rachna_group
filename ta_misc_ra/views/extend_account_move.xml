<odoo>
	<record id="extend_account_move_form_batch" model="ir.ui.view">
	    <field name="name">extend.account.move.form.batch</field>
	    <field name="model">account.move</field>
	    <field name="inherit_id" ref="account.view_move_form"/>
	    <field name="arch" type="xml">
			<xpath expr="//group[@id='header_right_group']" position="inside">
				<lable for="courier_number"/>
				<field name="courier_number" attrs="{'readonly':[('state', 'not in', ['draft'])]}"/>
				<lable for="other_detail"/>
				<field name="other_detail" attrs="{'readonly':[('state', 'not in', ['draft'])]}"/>
				<lable for="batch_number"/>
				<field name="batch_number" attrs="{'readonly':[('state', 'not in', ['draft'])]}"/>
			</xpath>
        </field>
    </record>
	<record id="extend_account_move_tree_batch" model="ir.ui.view">
	    <field name="name">extend.account.move.tree.batch</field>
	    <field name="model">account.move</field>
	    <field name="inherit_id" ref="account.view_out_invoice_tree"/>
	    <field name="arch" type="xml">
			<xpath expr="//field[@name='invoice_partner_display_name']" position="after">
				<field name="batch_number"/>
			</xpath>
        </field>
    </record>
</odoo>