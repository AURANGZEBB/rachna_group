<odoo>
	<record id="view_ta_batch_tree" model="ir.ui.view">
  		<field name="name">Batch Number</field>
  		<field name="model">ta.batch</field>
  		<field name="arch" type="xml">
			<tree>
				<field name="name"/>
    		</tree>
  		</field>
	</record>

	<record id="view_ta_batch_form" model="ir.ui.view">
  		<field name="name">Batch Number</field>
  		<field name="model">ta.batch</field>
  		<field name="arch" type="xml">
			<form>
				<sheet>
					<group>
						<group>
							<field name="name"/>
						</group>
					</group>
				</sheet>
    		</form>
  		</field>
	</record>

	<record id="action_ta_batch" model="ir.actions.act_window">
	   	<field name="name">Batach Number</field>
	   	<field name="res_model">ta.batch</field>
	   	<field name="view_mode">tree,form</field>
		<field name="context">{}</field>
		<field name="domain">[]</field>
	   	<field name="help" type="html">
		   <p class="o_view_nocontent_smiling_face">
			   Create Batch Numbers
		   </p>
	   	</field>
	</record>


	<menuitem id="menu_ta_batch"
         name="Batch Number"
         parent="mrp.menu_mrp_config"
         action="action_ta_batch"
         sequence="0"/>
</odoo>