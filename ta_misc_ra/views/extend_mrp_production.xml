<odoo>
	<record id="extend_mrp_production_form" model="ir.ui.view">
	    <field name="name">extend.mrp.production.form</field>
	    <field name="model">mrp.production</field>
	    <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
	    <field name="arch" type="xml">
			<xpath expr="//field[@name='company_id']" position="after">
				<field name="batch_number" attrs="{'readonly':[('state', 'not in', ['draft', 'confirmed'])]}"/>
			</xpath>
        </field>
    </record>
	<record id="extend_mrp_production_tree" model="ir.ui.view">
	    <field name="name">extend.mrp.production.tree</field>
	    <field name="model">mrp.production</field>
	    <field name="inherit_id" ref="mrp.mrp_production_tree_view"/>
	    <field name="arch" type="xml">
			<xpath expr="//field[@name='origin']" position="after">
				<field name="batch_number"/>
			</xpath>
        </field>
    </record>
</odoo>